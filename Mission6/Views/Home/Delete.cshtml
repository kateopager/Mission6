@{
    ViewData["Title"] = "Delete Movie Review";
}
@model ApplicationResponse

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete the review of @Model.Title directed by @Model.Director ?</h3>

<form method="post" asp-controller="Home" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="Waitlist" class="btn btn-primary">Cancel</a>

 <input type="hidden" asp-for="MovieReviewID"  />
</form>


