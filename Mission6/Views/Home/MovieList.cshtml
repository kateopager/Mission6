@{
    ViewData["Title"] = "Movie List";
}
@model List<ApplicationResponse>

<table class="table table-bordered">
    <thead  class="font-weight-bold" style="color:cadetblue">
        <tr>
            <td>Title</td>
            <td>Category</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent to</td>
            <td>Notes</td>

        </tr>
    </thead>

    <tbody>
        @foreach(var x in Model)
            {
         <tr>
            <td>@x.Title</td>
            <td>@x.Category.CategoryName</td>
            <td>@x.Year</td>
            <td>@x.Director</td>
            <td>@x.Rating</td>
            <td>@x.Edited</td>
            <td>@x.LentTo</td>
            <td>@x.Notes</td>

             <td><a asp-controller="Home" asp-action="Edit" asp-route-moviereviewid ="@x.MovieReviewID" >Edit</a></td>
             <td><a asp-controller="Home" asp-action="Delete" asp-route-moviereviewid ="@x.MovieReviewID">Delete</a></td>
        </tr>
             }
        
    </tbody>

</table>
